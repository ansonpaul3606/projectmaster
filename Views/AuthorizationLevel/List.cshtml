@{
    ViewBag.Title = "";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12" id="jq_AuthorizationList_formContainer">
        </div>
    </div>
</div>



@section scripts{

    <script type="text/javascript">


        $(document).ready(function () {
            $('#jq-sidemenu').hide();
        });
        const $formContainer = $('#jq_AuthorizationList_formContainer');      
        $(document).ready(function () {
            fn_AuthorizationList_InitialLoad();

        });
      
      
        function fn_AuthorizationList_InitialLoad() {           
            $formContainer.load('@Url.Action("LoadAuthorizationCard", "AuthorizationLevel")', function () {
                let $thisForm = $(this).find('[perfect-class="form"]');               
                initFunctions($thisForm);
            });
        };
        function fn_showAuthList() {
          
             $formContainer.load('@Url.Action("LoadAuthorizationCard", "AuthorizationLevel")', function () {
                let $thisForm = $(this).find('[perfect-class="form"]');               
                initFunctions($thisForm);
            });
        }
    </script>
}







