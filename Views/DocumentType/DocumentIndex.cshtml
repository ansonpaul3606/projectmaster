@section scripts{
    <script>

        var tableOptions = {
            dropdown: {
                buttons: [

                
                 @if (ViewBag.PagedAccessRights.UsrrlTyView) {
        <text> { displayName: "View", action: editDocument },</text>
    }

                    { type: "divider" },
