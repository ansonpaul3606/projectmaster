

@{
    ViewBag.Title = "Index";
}


<div class="container-fluid">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12" id="Servicereport-form">

        </div>
    </div>
</div>
@section scripts{

    <script type="text/javascript">      

        const $formContainer = $('#Servicereport-form');
        var EQSTransMode = '';
        $(document).ready(function () {
            ServiceinitialLoad();
          // RenewreportInitialLoadAddForm();
            $('#jq-sidemenu').hide();
        });
        function fn_showFilter() {
            let $thisForm = $('[perfect-class="form"]');
            $thisForm.closest('.jq_leadgeneration_body').find('.leadformSesction').toggleClass('d-none');
        }


        function ServiceinitialLoad() {
            EQSTransMode = '@ViewBag.TransMode';
            ServicereportInitialLoadAddForm();


        }







        function ServicereportInitialLoadAddForm() {

         $formContainer.load('@Url.Action("LoadFormServiceEquipmentReport", "EquipmentServiceReport")',  function () {
            let $thisForm = $(this).find('[perfect-class="form"]');
             $thisForm.find('[name="FromDate"]').val(moment().format('YYYY-MM-DD'));
             $thisForm.find('[name="ToDate"]').val(moment().format('YYYY-MM-DD'));
             $thisForm.attr('perfect-onFormSuccess', 'ServiceinitialLoad');
            $thisForm.closest('.jq_leadgeneration_body').find('.leadformSesction').addClass('d-none');
          
           
        
             
        });
    };

        function fn_showFilter() {
            $formContainer.find('.jq_leadgeneration_body').find('.leadformSesction').toggleClass('d-none');
        }

 

    </script>
}







