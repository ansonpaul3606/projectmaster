


@{
    ViewBag.Title = "Index";
}


<div class="container-fluid">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12" id="Intimationreport-form">

        </div>
    </div>
</div>

@section scripts {

    <script type="text/javascript">

        const $formContainer = $('#Intimationreport-form');


         $(document).ready(function () {

            fn_Intimationreport_initialLoad();


        });


        function fn_showFilter() {
            let $thisForm = $('[perfect-class="form"]');
            $thisForm.closest('.jq_leadgeneration_body').find('.leadformSesction').toggleClass('d-none');
        }

        function fn_Intimationreport_initialLoad() {

            LoadIntimationreport();

        }
        var validationMessage = {
            'datefilter': {
                'required': 'Please Select  Date Range'
            },
           
        }

        function LoadIntimationreport() {


            $formContainer.load('@Url.Action("LoadIntimationreport", "IntimationReport")?mtd=@ViewBag.mtd' , function () {

                let $thisForm = $(this).find('[perfect-class="form"]');
                $thisForm.validate({ messages: validationMessage });
               
                $("#divIntimationList").hide();
              //  $thisForm.closest('.jq_leadgeneration_body').find('.leadformSesction').toggleClass('d-none');
                $thisForm.attr('perfect-onFormSuccess', ' fn_Intimationreport_initialLoad');

            });
        }
    </script>
}

