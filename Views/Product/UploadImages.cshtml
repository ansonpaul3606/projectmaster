@{
    ViewBag.Title = "Product Upload Images";

}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12" id="productImages-form">
        </div>
    </div>
</div>
@section scripts{
    <script>
        const $formContainer = $('#productImages-form');
        $(document).ready(function () {
            loadProductImagesForm();           
        });

        var validationMessage = {
            'FK_Category': {
                'required': 'Please select Category'
            },
            'FK_Product': {
                'required': 'Please select  Product'
            }
        };      
        function loadProductImagesForm() {
            $formContainer.load('@Url.Action("LoadFormUploadImages", "Product")', function () {  
                let $thisForm = $(this).find('[perfect-class="form"]');
                $thisForm.validate({ messages: validationMessage });
            });
        }
    </script>
}