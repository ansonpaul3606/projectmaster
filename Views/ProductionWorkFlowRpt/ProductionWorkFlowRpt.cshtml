
@{
    
    ViewBag.Title = "ProductionWorkFlowRpt";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid">
    @*@Html.AntiForgeryToken()*@
    <div class="row">
        <div class="col-lg-12" id="jq_ProductionWorkFlowRpt_formContainer">

        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        const $formContainer = $('#jq_ProductionWorkFlowRpt_formContainer');

        $(document).ready(function () {                                                                                                                                                                                                    
            fn_ProductionWorkFlowRpt_initialload();
        });
        var ProductionWorkFlowRptTransMode = '@ViewBag.TransMode';

        function fn_ProductionWorkFlowRpt_initialload() {
            fn_loadShortageMarkingAddForm();
        }

        function fn_loadShortageMarkingAddForm() {

            $formContainer.load('@Url.Action("LoadProductionWorkFlowRptForm", "ProductionWorkFlowRpt")?mtd=@ViewBag.mtd', function () {
                let $thisForm = $(this).find('[perfect-class="form"]');
                $thisForm.attr('perfect-onFormSuccess', 'fn_ProductionWorkFlowRpt_initialload');
                $thisForm.validate({ messages: validationMessage });
            });
        }


        var validationMessage = {

            'FK_Product': {
                'required': 'Please Select Product'
            },
        };
    </script>
}
