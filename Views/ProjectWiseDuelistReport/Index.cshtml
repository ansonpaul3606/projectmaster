


<div class="container-fluid">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12" id="Projectwiseduelist-form">

        </div>
    </div>
</div>

@section scripts {

    <script type="text/javascript">

        const $formContainer = $('#Projectwiseduelist-form');
        

         $(document).ready(function () {

            fn_Projectwiseduelist_initialLoad();


        });
        function fn_showFilter() {
            let $thisForm = $('[perfect-class="form"]');
            $thisForm.closest('.Projectwiseduelistbody').find('.Projectwiseduelistbodysearch-body').toggleClass('d-none');
        }

        function fn_Projectwiseduelist_initialLoad() {
           
            LoadProjectwiseduelistReport();

        }
        var validationMessage = {
            'AsonDate': {
                'required': 'Please enter  Date'
            }
           
        }

        function LoadProjectwiseduelistReport() {

            @*$formContainer.load('@Url.Action("LoadMaterialRequestRepo", "MaterialRequestReports")?mtd=@ViewBag.mtd' + '&TransMode=@ViewBag.TransMode', function () {*@
            $formContainer.load('@Url.Action("LoadProjectwiseduelistReport", "ProjectWiseDuelistReport")?mtd=@ViewBag.mtd' , function () {

                let $thisForm = $(this).find('[perfect-class="form"]');
                $thisForm.validate({ messages: validationMessage });
                  $thisForm.find('[name="AsonDate"]').val(moment().format('YYYY-MM-DD'));
                $thisForm.closest('.Projectwiseduelistbody').find('.Projectwiseduelistbodysearch-body').addClass('d-none');
                $thisForm.attr('perfect-onFormSuccess', 'fn_Projectwiseduelist_initialLoad');

            });
        }
    </script>
}