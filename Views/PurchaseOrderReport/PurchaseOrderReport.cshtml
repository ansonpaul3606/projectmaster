
@{
    ViewBag.Title = "PurchaseOrderReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12" id="PurchaseOrderreport-form">

        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        const $formContainer = $('#PurchaseOrderreport-form');
        $(document).ready(function () {
            PurchaseOrderreportInitialLoad();

            $('#jq-sidemenu').hide();

        });
        var PurchaseOrderReportTransmode = '';
        function PurchaseOrderreportInitialLoad() {

            PurchaseOrderReportTransmode='@ViewBag.TransMode';
            $formContainer.load('@Url.Action("LoadPurchaseOrderReportForm", "PurchaseOrderReport")?mtd=@ViewBag.mtd', function () {

                let $thisForm = $(this).find('[perfect-class="form"]');
                //Custom Validation messages.
                $thisForm.find('[name="FromDate"]').val(moment().format('YYYY-MM-DD'));
                $thisForm.find('[name="ToDate"]').val(moment().format('YYYY-MM-DD'));

                $thisForm.attr('perfect-onFormSuccess', 'PurchaseOrderreportInitialLoad');
            });

        };





    </script>
}


