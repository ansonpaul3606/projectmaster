    function fn_AccountSubHead_update(ele, actionType) {
        debugger;
       
        let $thisForm = $(ele).closest('[perfect-class="form"]');
        if ($thisForm.find('[name="ASHFrom"]').val() == 1 && $thisForm.find('[name="ID_Customer"]').val() == "") {
            $('[name=ID_Customer]').addClass("perfectValidate_string");
            $('[name="SupplierID"]').removeClass('perfectValidate_string');
            $('[name="BuyerID"]').removeClass('perfectValidate_string');    
            $('[name="ID_Employee"]').removeClass("perfectValidate_string");

        }
        else if ($thisForm.find('[name="ASHFrom"]').val() == 2 && $thisForm.find('[name="SupplierID"]').val() == "") {
            $('[name="SupplierID"]').addClass('perfectValidate_string');
            $('[name=ID_Customer]').removeClass("perfectValidate_string");
            $('[name="BuyerID"]').removeClass("perfectValidate_string"); 
            $('[name="ID_Employee"]').removeClass("perfectValidate_string");

        }
        else if ($thisForm.find('[name="ASHFrom"]').val() == 3 && $thisForm.find('[name="BuyerID"]').val() == "") {
            $('[name="BuyerID"]').addClass("perfectValidate_string");
            $('[name="SupplierID"]').removeClass('perfectValidate_string');
            $('[name="ID_Customer"]').removeClass("perfectValidate_string");   
            $('[name="ID_Employee"]').removeClass("perfectValidate_string");
        }
        else if ($thisForm.find('[name="ASHFrom"]').val() == 4 && $thisForm.find('[name="ID_Employee"]').val() == "") {

            $('[name="ID_Employee"]').addClass("perfectValidate_string");
            $('[name="SupplierID"]').removeClass('perfectValidate_string');
            $('[name="ID_Customer"]').removeClass("perfectValidate_string");
            $('[name="BuyerID"]').removeClass("perfectValidate_string");    
        }
        else {
            $('[name="SupplierID"]').removeClass('perfectValidate_string');
            $('[name=ID_Customer]').removeClass("perfectValidate_string");
            $('[name="BuyerID"]').removeClass("perfectValidate_string");    
        }

        if ($thisForm.valid())
        {
            $(ele).prop('disabled', true);

            let ID_AccountSubHead = 0;
                    let _ActionUrl = "";
                   

                    if (actionType === "new") {
                        ID_AccountSubHead = 0;                       
                        _ActionUrl = "@Url.Action("SaveAccountSubHead", "AccountSubHead")";
                    }
                    else if (actionType === "update") {
                        ID_AccountSubHead = $thisForm.find('[name="ID_AccountSubHead"]').val();
                        _ActionUrl = "@Url.Action("UpdateAccountSubHead", "AccountSubHead")";
            }
            
         let inputData = {
             'ID_AccountSubHead': ID_AccountSubHead,
             __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(), //antiForgery
             'ASHName': $thisForm.find('[name="CustomeName"]').val().trim(),
             'ASHShortName': $thisForm.find('[name="ASHShortName"]').val().trim(),
             'FK_AccountHead': $thisForm.find('[name="FK_AccountHead"]').val().trim(), 
             'ASHFrom': $thisForm.find('[name="ASHFrom"]').val().trim(), 
             'SortOrder': $thisForm.find('[name="SortOrder"]').val().trim(),
             'FK_Master': ($thisForm.find('[name="ASHFrom"]').val() == 1 ? $thisForm.find('[name="ID_Customer"]').val() : $thisForm.find('[name="ASHFrom"]').val() == 2 ? $thisForm.find('[name="SupplierID"]').val() : $thisForm.find('[name="ASHFrom"]').val() == 3 ? $thisForm.find('[name="BuyerID"]').val() : ($thisForm.find('[name="ASHFrom"]').val() == 4 ? $thisForm.find('[name="ID_Employee"]').val() : 0)),
            // 'FK_Master': ($thisForm.find('[name="ASHFrom"]').val() == 1 ? $thisForm.find('[name="ID_Customer"]').val() : $thisForm.find('[name="ASHFrom"]').val() == 2 ? $thisForm.find('[name="SupplierID"]').val() : ($thisForm.find('[name="ASHFrom"]').val() == 3 ? $thisForm.find('[name="BuyerID"]').val() : 0)),

             'TransMode': AccountSubHeadTransMode,
             'FK_Branch': $thisForm.find('[name="FK_Branch"]').val()
         };
       
            $.ajax({
                  url: _ActionUrl,
                type: "POST",
                data: inputData, //Antiforgery removed stringyfy
                dataType: "json",
                contentType: "application/x-www-form-urlencoded; charset=utf-8", //antiforgery
                success: function (ajaxOutput) {

                    if (ajaxOutput.Process.IsProcess) {

                        $.each(ajaxOutput.Process.Message, function (key, value) {
                            NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                        });

                        $thisForm.find('[perfect-ctype="select"]').val('').selectpicker('refresh');
                        $thisForm.find('[perfect-ctype="input"]').val('');
                        $thisForm.find('[perfect-ctype="date"]').val('');
                        $thisForm.find('[perfect-ctype="hidden"]').val('');
                        // Get the value set in form's perfect-onFormSuccess attribute
                        let onSuccess = $thisForm.attr('perfect-onFormSuccess')

                        if (onSuccess) {
                            window[onSuccess]($thisForm);
                        }
                    }
                    else {
                        $.each(ajaxOutput.Process.Message, function (key, value) {
                            NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                        });
                    }
                },
                complete: function () {
                    $(ele).prop('disabled', false);
                }

            });
        }
    }
    function Changevalue(ele) {
        debugger
        let $thisForm = $(ele).closest('[perfect-class="form"]');
        //console.log("$thisForm.find('[name=]').val()", parseInt($thisForm.find('[name="ASHFrom"]').val()));
        //alert(ele.value);
        if (ele.value != 2) {
            $('[name="FK_BranchCode"]').val(0);
        }
        else {
            $('[name="FK_BranchCode"]').val(FK_BranchCode);
        }
       
        $('[name="BuyerID"]').val('');
        $('[name="SupplierID"]').val('');
        $('[name="ID_Customer"]').val('');
        $('[name="ID_Employee"]').val('');
    }
  
    function generateShortName(ele) {
        debugger;
        let $form = $(ele).closest('[perfect-class="form"]');
        var fullName = $form.find('[name="CustomeName"]').val();
        var shortName = generateShortNameFromFullName(fullName);
        $form.find('[name="ASHShortName"]').val(shortName);
    }
</script>
