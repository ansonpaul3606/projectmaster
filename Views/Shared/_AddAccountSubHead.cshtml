<script type="text/javascript">

    function fn_showImportListSubHead(element) {

        let $thisForm = $(element).closest('[perfect-class="form"]');
        console.log("$thisForm.find('[name=]').val()", parseInt($thisForm.find('[name="ASHFrom"]').val()));
        $('[name="BuyerID"]').val('');
        $('[name="SupplierID"]').val('');
        $('[name="ID_Customer"]').val('');
        $('[name="ID_Employee"]').val('');
        switch (parseInt($thisForm.find('[name="ASHFrom"]').val())) {
            case 1:
                GetCmnPopUpSearchValAssign(element, 7, 'Customer List', [], ['ID_Customer', 'CustomeName', 'MobileNo', 'SupplierName','GSTINNo'], AccountSubHeadTransMode);
                break;
            case 2:
                GetCmnPopUpSearchValAssign(element, 20, 'Supplier List', [], ['SupplierID', 'CustomeName'], AccountSubHeadTransMode);
                break;
            case 3:
                GetCmnPopUpSearchValAssign(element, 99, 'Buyer List', [], ['BuyerID', 'CustomeName', 'BuyerName','BuyerMobileNo'], AccountSubHeadTransMode);
                break;
            case 4:
                GetCmnPopUpSearchValAssign(element, 157, 'Employee List', [], ['ID_Employee','CustomeName'], AccountSubHeadTransMode);
                break;
            default:
                NotificationMessage({ 'type': 'info', 'heading': 'info', 'message': 'Please Select Import From' });
                break;
        }
       
    }
    

    $(document).ready(function () {
