    function AddEmployeeRelieved(ele, actionType) {

       // debugger
        let $thisForm = $(ele).closest('[perfect-class="form"]');

        if ($thisForm.valid()) {

            $(ele).prop('disabled', true);

            let _ID_EmployeeRelieving = 0;
                    let _ActionUrl = "";

            if (actionType === "Add") {
                _ID_EmployeeRelieving = 0;
                _ActionUrl = "@Url.Action("AddEmployeeRelieved", "EmployeeRelieving")";
            }
            else if (actionType === "update") {
                _ID_EmployeeRelieving = $thisForm.find('[name="EmployeeRelievingID"]').val();
                _ActionUrl ="@Url.Action("UpdateEmployeeRelieved", "EmployeeRelieving")";
            }

                let inputData =
                {
                        __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
                        'EmployeeRelievingID': _ID_EmployeeRelieving,
                        'EmployeeID': $thisForm.find('[name=EmployeeID]').val(),
                        'ERDate': $thisForm.find('[name="ERDate"]').val(),
                       
                        'ERReason': $thisForm.find('[name=ERReason]').val(),
                        'ERRemarks': $thisForm.find('[name=ERRemarks]').val(),
                      
                       // 'TransMode': CklTransMode,
                        
            };
           
                $.ajax({
                    url: _ActionUrl,
                    type: "POST",
                    data: inputData,
                    dataType: "json",
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                    success: function (ajaxOutput) {
                        if (ajaxOutput.Process.IsProcess) {
                            $.each(ajaxOutput.Process.Message, function (key, value) {
                                NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                            });

                            fn_EmployeeRelieving_initialLoad();
                         

                        }
                        else {
                            $.each(ajaxOutput.Process.Message, function (key, value) {
                                NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                                $(ele).prop('disabled', false);
                            });
                        }
                    },
                    complete: function () {
                        $(ele).prop('disabled', false);
                    }
                });
        }

    }
    

</script>
