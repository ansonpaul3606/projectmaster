<script>



    function AddFinancePlan(ele) {
        // debugger;
        let $thisForm = $(ele).closest('[perfect-class="form"]');
        //Checkvalidation($thisForm);    
        if ($thisForm.valid() && ($thisForm.find('[name="FinanceDuration"]').val() != null || $thisForm.find('[name="FinanceInstallmentPeriod"]').val() != null)) {//<---------Validation :  To Check whether the form is vaild(ie; values in the form contrls are valid)
            let FinanceDuration = parseInt($thisForm.find('[name="FinanceDuration"]').val());
            let FinanceInstallmentPeriod = parseInt($thisForm.find('[name="FinanceInstallmentPeriod"]').val());
            if ((FinanceDuration == 0) && (FinanceInstallmentPeriod == 0)) {
                NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': 'Please Enter Valid Duration and Installment Period' });
            }
            else if (FinanceInstallmentPeriod == 0) {
                NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': 'Please Enter Valid Installment Period' });
            }
            else if (FinanceDuration < FinanceInstallmentPeriod && FinanceInstallmentPeriod == 0) {
                NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': 'Please Enter Valid Installment Period' });
            }
            else if (FinanceDuration < FinanceInstallmentPeriod) {
                NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': 'Installment Period should be less than Duration' });
            }
            else {

                $(ele).prop('disabled', true);
                console.log('> Add Finance Plan form IS valid', $thisForm.valid())
                if ($thisForm.valid()) {
                    $(ele).prop('disabled', true);
                    var inputData = {
                        ID_FinancePlanType: 0,
                        FinancePlanName: $thisForm.find('[name="FinancePlanName"]').val().trim(),
                        FinancePlanShortName: $thisForm.find('[name="FinancePlanShortName"]').val().trim(),
                        FinancePeriodType: $thisForm.find('[name="FinancePeriodType"]').val().trim(),
                        FinanceInstallmentPeriod: $thisForm.find('[name="FinanceInstallmentPeriod"]').val().trim(),
                        TransMode: FinanceTypeTransMode,
                        FinanceDuration: $thisForm.find('[name="FinanceDuration"]').val().trim()
                    };

                    console.log('> Add Finance Plan ajax input', inputData);
                    $.ajax({
                        url: '@Url.Action("AddNewFinancePlan", "FinancePlanType")',
                        type: "POST",
                        data: JSON.stringify(inputData),
                        dataType: "json",
                        contentType: "application/json",
                        success: function (data) {
                            if (data.Process.IsProcess) {
                                $.each(data.Process.Message, function (key, value) {
                                    NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                                });
                            }
                            else {
                                $.each(data.Process.Message, function (key, value) {
                                    NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                                });
                            }
                            $thisForm.find('[perfect-ctype="input"]').val('');
                            $thisForm.find('[perfect-ctype="digit"]').val('');

                            let onSuccess = $thisForm.attr('perfect-onFormSuccess')

                            if (onSuccess) {
                                window[onSuccess]($thisForm);
                            }
                            console.log('> Add new Finance Plan success data', data);
                        },
                        complete: function () {
                            $(ele).prop('disabled', false);
                        }
                    });
                }
            }
        }
    }

