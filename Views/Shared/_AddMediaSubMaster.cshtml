                         //toastr.success("Inside success", "Confirmation Box in table");

                         console.log('> update new MediaSubMaster success data', ajaxOutput);
                     }
                     else {
                         $.each(ajaxOutput.Process.Message, function (key, value) {
                             //toastr.warning(value, "Error");
                             NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                         });
                     }


                },
                complete: function () {
                    $(ele).prop('disabled', false);
                }

            });

        }

    }

    function generateShortNames(ele) {
        let $form = $(ele).closest('[perfect-class="form"]');
        var fullName = $form.find('[name="SubMediaName"]').val();
        var shortName = generateShortNameFromFullName(fullName);
        $form.find('[name="SubMediaShortName"]').val(shortName);
    }

    function fn_MediaForm_load(ele) {


        $('#formGroupModalMedia').modal('show');
        let $savimgContainer = $('#custmr-savs');
        $savimgContainer.load('@Url.Action("LoadMediaMasterForm", "MediaMaster")', function () {

            let $thisForm = $(this).find('[perfect-class="form"]');
            $thisForm.validate({ messages: validationMessageMedia });
            $thisForm.attr('perfect-onFormSuccess', 'fn_MediaForm_loadState_success');
            $('#HeaderId').hide();
            $('#formGroupModalMedia').modal('show');
        });

    }
    function loadMediaMasterAddForm() {
        let $savimgContainers = $('#custmr-savs');
        $savimgContainers.load('@Url.Action("LoadMediaMasterForm", "MediaMaster")', function () {

            let $thisForm = $(this).find('[perfect-class="form"]');
            $thisForm.validate({ messages: validationMessageMedia });
            $thisForm.attr('perfect-onFormSuccess', 'fn_MediaForm_loadState_success');
            $('#HeaderId').hide();
            $('#formGroupModalMedia').modal('show');
        });
    }
    var validationMessageMedia = {
        'MediaName': {
            'required': 'Please Enter a Name',
            'maxlength': jQuery.validator.format(' Name should be less than {0} characters'),
            'stringonly': 'Special characters are not allowed in  Name'

        },
        'MediaShortName': {
            'required': 'Please Enter a Short Name',
            'maxlength': jQuery.validator.format('Short Name should be less than {0} characters'),
            'alphanumeric': 'Special characters are not allowed in short name'
        },

        'MediaTypeID': {
            'required': 'Please Select a Mode',
            'digits': 'Invalid Media Type selected'
        },
    };
    function fn_MediaForm_loadState_success(ele) {
        GetListMedia()
        $('#formGroupModalMedia').modal('hide');
    }
        function GetListMedia() {
        let $thisForm = $('[perfect-class="form"]');
        $.ajax({
            url: '@Url.Action("GetMediaList", "MediaSubMaster")',
            type: "Get",
            dataType: "json",
            contentType: "application/json",
            success: function (ajaxOutput) {//<----- if ajax method executed succesfully,  we get the data passed from controller in this variable  => success: function (variable) {              
                let $menuDropdown = $thisForm.find('[name=FK_Media]');//<--- Will give place select html element

               
               $menuDropdown.empty().selectpicker('refresh');
                $menuDropdown.append($('<option/>', { "value": "" }).text("Please Select")).selectpicker('refresh');

                if (ajaxOutput.Process.IsProcess) {
                    console.log(ajaxOutput);
                    $.each(ajaxOutput.Data, function (key, value) {
                        $menuDropdown.append($('<option/>', { "value": value.MediaMasterID }).text(value.MediaMasterName)).selectpicker('refresh');

                    });                 
                    
                }
                else {
                    $.each(ajaxOutput.Process.Message, function (key, value) {
                        //toastr.warning(value, "Error");
                        NotificationMessage({ 'type': 'warning', 'heading': 'warning', 'message': value });
                    });
                }
            },

          complete: function () { initFunctions($thisForm); }
        });
    }
</script>
