                $(ele).prop('disabled', true);

                let pdata = $thisForm.data('pData');

                console.log('> Update MediaName form data saved',pdata);
                let inputData = {
                    __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
                    'ID_MediaSubMaster': pdata.MediaSubMasterID,
                    SubMediaName: $thisForm.find('[name=SubMediaName]').val().trim(),
                    SubMediaShortName: $thisForm.find('[name=SubMediaShortName]').val().trim(),
                    FK_Media: $thisForm.find('[name=FK_Media]').val().trim(),
                    SortOrder: $thisForm.find('[name=SortOrder]').val().trim(),
                    TransMode: MediaSubTransMode
            };

         


            console.log('> Update ME ajax input',inputData);
             $.ajax({
                 url: "@Url.Action("updateSubMediaMaster", "MediaSubMaster")",
                type: "POST",
                 // headers: { "token_key": "1234" },
                 data: inputData,
                 dataType: "json",
                 contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                 success: function (ajaxOutput) { //<----- if ajax method executed succesfully,  we get the data passed from controller in this variable  => success: function (variable) {

                     if (ajaxOutput.Process.IsProcess) {

                         $.each(ajaxOutput.Process.Message, function (key, value) {
                             //toastr.success(value, "Success");
                             NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                         });


                         let onSuccess = $thisForm.attr('perfect-onFormSuccess')

                         if (onSuccess) {
                             window[onSuccess]($thisForm);
                         }

