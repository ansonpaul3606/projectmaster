</div>

<script>
    function ResetButton() {
        $('.dataTable tr').removeClass("SelectForDelete");
        loadMediaSubMasterForm();
    }

   
    function AddMediaSubMaster(ele) {

        debugger;
            let $thisForm = $(ele).closest('[perfect-class="form"]');//<------Form element :  Our Form which contain our input elements ,saved in a variable for reusability


            //$(ele).find('i').removeClass();

            console.log('> Add MediaMaster form IS valid', $thisForm.valid())
        if ($thisForm.valid()) {//<---------Validation :  To Check whether the form is vaild(ie; values in the form contrls are valid)

            $(ele).prop('disabled', true); // avoiding form submit the double click


            var inputData = {//<---- Input Json : this is the variable we pass to controller
                __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
                'ID_MediaSubMaster': 0,
                SubMediaName: $thisForm.find('[name=SubMediaName]').val().trim(),
                SubMediaShortName: $thisForm.find('[name=SubMediaShortName]').val().trim(),
                FK_Media: $thisForm.find('[name=FK_Media]').val().trim(),
                SortOrder: $thisForm.find('[name=SortOrder]').val().trim(),
                TransMode: MediaSubTransMode
            };
         

            console.log('> Add Reason ajax input',inputData);

             $.ajax({
                 url: "@Url.Action("AddSubMediaMaster", "MediaSubMaster")",
                type: "POST",
                 // headers: { "token_key": "1234" },
                 data: inputData,
                 dataType: "json",
                 contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                 success: function (data) {//<----- if ajax method executed succesfully,  we get the data passed from controller in this variable  => success: function (variable) {

                     if (data.Process.IsProcess) {

                         $.each(data.Process.Message, function (key, value) {
                             //toastr.success(value, "Success");
                             NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                         });
                         $thisForm.find('[perfect-ctype="select"]').val('').selectpicker('refresh');
                         $thisForm.find('[perfect-ctype="input"]').val('');
                         $thisForm.find('[perfect-ctype="number"]').val('');



                         let onSuccess = $thisForm.attr('perfect-onFormSuccess')

                         if (onSuccess) {
                             window[onSuccess]($thisForm);
                         }

                         //---------- Do stuff if success

                         console.log('> Add new MediaSubMaster success data', data);
                     }
                     else {
                         $.each(data.Process.Message, function (key, value) {
                             //toastr.warning(value, "Error");
                             NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                         });
                     }
                },
                complete: function () {
                    $(ele).prop('disabled', false);
                }

            });

        }

    }

    function UpdateMediaSubMaster(ele) {

            debugger;
            let $thisForm = $(ele).closest('[perfect-class="form"]');//<------Form element :  Our Form which contain our input elements ,saved in a variable for reusability

            //perfectCRMvalidation.init($thisForm);

