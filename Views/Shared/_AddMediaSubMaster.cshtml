                {
                    <button id="addcompany-jq-addnewuser" type="button" class="btn btn-primary mr-3 " name="add" perfect-css="button" onclick="AddMediaSubMaster(this)"><i class="fa fa-refresh fa-spin loaderClass "></i>Save</button>
