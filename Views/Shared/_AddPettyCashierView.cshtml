    function AddPettyCashier(ele, actionType) {

      
        let $thisForm = $(ele).closest('[perfect-class="form"]');

        if ($thisForm.valid()) {

            $(ele).prop('disabled', true);

            let _ID_PettyCashierID = 0;
                    let _ActionUrl = "";

            if (actionType === "Add") {
                _ID_PettyCashierID = 0;
                _ActionUrl = "@Url.Action("AddPettyCashier", "PettyCashier")";
            }
            else if (actionType === "update") {
                _ID_PettyCashierID = $thisForm.find('[name="PettyCashierID"]').val();
                _ActionUrl ="@Url.Action("UpdateAddPettyCashier", "PettyCashier")";
            }

                let inputData =
                {
                        __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
                        'PettyCashierID': _ID_PettyCashierID,
                      Names: $thisForm.find('[name=Names]').val().trim(),
                    ShortName: $thisForm.find('[name=ShortName]').val().trim(),
                    Active: $thisForm.find('[name=Active]').is(":checked"),

                   
                    AccountHead: $thisForm.find('[name=AccountHead]').val().trim(),
                    AccountHeadSub: $thisForm.find('[name=AccountHeadSub]').val().trim(),
                    SortOrder: $thisForm.find('[name=SortOrder]').val().trim()
                      
                      
                        
            };
           
                $.ajax({
                    url: _ActionUrl,
                    type: "POST",
                    data: inputData,
                    dataType: "json",
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                    success: function (ajaxOutput) {
                        if (ajaxOutput.Process.IsProcess) {
                            $.each(ajaxOutput.Process.Message, function (key, value) {
                                NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                            });

                            PettyCashierInitialLoad();
                         

                        }
                        else {
                            $.each(ajaxOutput.Process.Message, function (key, value) {
                                NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                                $(ele).prop('disabled', false);
                            });
                        }
                    },
                    complete: function () {
                        $(ele).prop('disabled', false);
                    }
                });
        }

    }
    function generateShortName(ele) {
        let $form = $(ele).closest('[perfect-class="form"]');
        var fullName = $form.find('[name="Names"]').val();
        var shortName = generateShortNameFromFullName(fullName);
        $form.find('[name="ShortName"]').val(shortName);
    }
    
</script>
