                    AreaID: $thisForm.find('[name=AreaID]').val().trim(),
                   
                };

                localStorage.removeItem("FRM_TRANSMODE");
            console.log('> Update Post ajax input',inputData);
             $.ajax({
                 url: "@Url.Action("UpdatePost", "Post")",//<----- Controller URL : url path in our controller eq: /Home/InsertSampleData or http://localhost:64212/Home/InsertSampleData
