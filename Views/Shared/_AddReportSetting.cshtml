            if (AliaName == Object_ID)
            {
                console.log($tds);
                console.log(Exist);
                Exist++;
               
            }
            if (Exist > 0)
            {
                $('#' + Error).css('display', 'block');
            }
            else
            {

                $('#' + Error).css('display', 'none');
               
            }
        })
        return Exist;
    }



        function Removereptdetails(ele)
        {

        let $container = $(ele).closest('[perfect-class="form"]');
        let ObjectName = $(ele).closest("tr").find("td").eq(2).text().trim();
        let AliaNam = $(ele).closest("tr").find("td").eq(3).text().trim();

        if (confirm("Are you sure you want to delete " + " " + " " + ObjectName + "?")) {
            var row = $(ele).closest('tr');

            var siblings = row.siblings();

            siblings.each(function (index) {
                $(this).children('td').first().text(index + 1);
            });

         //removing dropdown value
            $container.find('[name=SortFldID]').find('option[value="' + AliaNam + '"]').remove();
            $container.find('[name=SortFldID]').selectpicker('refresh');
            var removear = $container.find('[name=SortArea]').val();
            removear = removear.replace(", [" + AliaNam + "] " + "ASC", '')
            removear = removear.replace(", [" + AliaNam + "] " + "DESC", '')
            removear = removear.replace("[" + AliaNam + "] " + "ASC,", '')
            removear = removear.replace("[" + AliaNam + "] " + "DESC,", '')
            removear = removear.replace("[" + AliaNam + "] " + "ASC", '')
            removear = removear.replace("[" + AliaNam + "] " + "DESC", '')


            $('#SortArea').val(removear);

            // Removing the current row.
            $(ele).closest('tr').remove();

        }
        else {
            return false;
        }

        //If removed all rows
        var rowcount = document.getElementById('ReportDetbody').rows.length;
            if (rowcount == 0) {
                document.getElementById("FrmtID").disabled = false;
                document.getElementById("MasterID").disabled = false;
            let TbodyHtml = '';
            TbodyHtml += "<tr id='0'> <td style='text-align:center;' colspan='5'>No Records..</td> </tr>";
            $('#ReportDetbody').html(TbodyHtml);
        }
    }

