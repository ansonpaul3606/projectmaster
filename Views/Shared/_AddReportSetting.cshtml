    function fn_ascsort(ele)
    {
        let $thisForm = $(ele).closest('[perfect-class="form"]');

        var srtval = $thisForm.find('[name=SortFldID]').val();

        if (srtval!='')
        {
            $('#btndesc').show();
            $('#btnasc').hide();

            var areaval = $thisForm.find('[name=SortArea]').val();
            var srttext = $('#SortFldID option:selected').text();
               var sortf = areaval;

                    if (areaval != '')
                    {

                        if (areaval.includes("[" + srttext + "] " + "ASC"))
                        {
                           
                            NotificationMessage({ 'type': 'error', 'heading': 'error', 'message': srttext + " already exists" });
                        }
                        else if (areaval.includes("[" + srttext + "]") )
                        {
                            
                            sortf = sortf.replace("[" + srttext + "] " + "DESC", "[" + srttext + "] " + "ASC");
                        }
                        else
                        {
                          
                            sortf = (sortf == "" ? "" : sortf + ",") + " [" + srttext + "] " + "ASC";

                        }
                    }
                    else
                    {

                      sortf = "[" + srttext + "] " + "ASC";
                    }

                $('#SortArea').val(sortf);
                ///ModelState.Clear();

            }


    }

