        if ($thisForm.find('[name=FrmtID]').val() == 1) {

            $.ajax({
                url: "@Url.Action("getMstrList", "ReportSetting")",
                type: "POST",
                data: frmtID,
                dataType: "json",
                contentType: "application/x-www-form-urlencoded;charset=utf-8",
