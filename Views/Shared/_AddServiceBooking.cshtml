<script>
    (function () {
        jQuery("select").selectpicker();

    });
    $(document).ready(function () {

        initFunctions('form');

    });

    function fn_showpopuplist(ele) {

        let $thisForm = $(ele).closest('[perfect-class="form"]');
        if (ServTransMode == 'VLSB') {

            GetCmnPopUpSearchValAssign(ele, 95, 'Vehicle List', [], ['VehicleNo', 'ID_FIELD', 'ID_Name','FK_Master'], ServTransMode)

          
        }
        else if (ServTransMode == 'TOSB') {

            GetCmnPopUpSearchValAssign(ele, 95, 'Tool List', [], ['ID_FIELD', 'ID_Name', 'HSNCode', 'FK_Master','VehicleNo'], ServTransMode)
        }
        else {
            NotificationMessage({ 'type': 'info', 'heading': 'info', 'message': 'Failed to Load' });
        }

    }


    function bookdateCheck(ele) {
        let $thisForm = $(ele).closest('[perfect-class="form"]');
        let BookDate = $thisForm.find('[name="SerBookingDate"]').val();

        BookDate = new Date(BookDate);
        BookDate.setHours(0, 0, 0, 0)

        var today = new Date();
        today.setHours(0, 0, 0, 0)

        if (BookDate <= today) {
            $thisForm.find('[name="SerBookingDate"]').closest('[perfect-class="formGroup"]').find('.limit-check').text('');
            return true;

        }
        else {
            $thisForm.find('[name="SerBookingDate"]').closest('[perfect-class="formGroup"]').find('.limit-check').text('Booking date should be less than or equal to Todays date');
            return false;
        }

    }

    function ServdateCheck(ele) {
        let $thisForm = $(ele).closest('[perfect-class="form"]');
        let ServiceDate = $thisForm.find('[name="SerServiceDate"]').val();
        let BooksDate = $thisForm.find('[name="SerBookingDate"]').val();

        ServiceDate = new Date(ServiceDate);
        ServiceDate.setHours(0, 0, 0, 0)

        BooksDate = new Date(BooksDate);
        BooksDate.setHours(0, 0, 0, 0)

        if (ServiceDate >= BooksDate) {
            $thisForm.find('[name="SerServiceDate"]').closest('[perfect-class="formGroup"]').find('.limit-checkst').text('');
            return true;

        }
        else {
            $thisForm.find('[name="SerServiceDate"]').closest('[perfect-class="formGroup"]').find('.limit-checkst').text('Service date should be greater than or equal to booking date');
            return false;
        }

    }

    function UpdateServiceBook(ele, actiontype) {

        let $thisForm = $(ele).closest('[perfect-class="form"]');

        if ($thisForm.valid()) {

            if (bookdateCheck(ele)) {
               if (ServdateCheck(ele)) {



                    var InputData = {
                        __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
                        'TransMode': ServTransMode,
                        'SerBookingNo': $thisForm.find('[name="SerBookingNo"]').val(),
                        'SerBookingDate': $thisForm.find('[name="SerBookingDate"]').val(),
                        'FK_EquipmentServiceType': $thisForm.find('[name="FK_EquipmentServiceType"]').val(),
                        'SerServiceDate': $thisForm.find('[name="SerServiceDate"]').val(),
                        'SerServiceTime': $thisForm.find('[name="SerServiceTime"]').val(),
                        'SerServiceCentre': $thisForm.find('[name="SerServiceCentre"]').val(),
                        'SerBookingDescription': $thisForm.find('[name="SerBookingDescription"]').val(),
                        ID_ServiceBooking: $thisForm.find('[name="ID_ServiceBooking"]').val(),
                        'FK_Master': $thisForm.find('[name="ID_FIELD"]').val(),
                        'SerPickDel': $thisForm.find('[name="SerPickDel"]').val(),
                        LastID: LastID_ServiceBooking,


                    }; debugger
                   clearSessionValue(LastIDSessionKey);
                let _ActionUrl = "";
                if (actiontype == "Add") { _ActionUrl = "@Url.Action("AddServiceBooking", "ServiceBooking")"; } else { _ActionUrl = "@Url.Action("UpdateServiceBooking", "ServiceBooking")"; }

                $.ajax({
                    url: (actiontype == "Add") ? "@Url.Action("AddServiceBooking", "ServiceBooking")" : "@Url.Action("UpdateServiceBooking", "ServiceBooking")",
                    type: "POST",
                    data: InputData,
                    dataType: "json",
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                    success: function (data) {
                        if (data.Process.IsProcess) {
                            $.each(data.Process.Message, function (key, value) {
                                NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                            });

                            $thisForm.find('[perfect-ctype="select"]').val('').selectpicker('refresh');
                            $thisForm.find('[perfect-ctype="input"]').val('');
                            $thisForm.find('[perfect-ctype="date"]').val('');
                            $thisForm.find('[perfect-ctype="hidden"]').val('');

                            let onSuccess = $thisForm.attr('perfect-onFormSuccess')
                            if (onSuccess) {
                                fn_Servicebooking_initialLoad();
                            }

                        }

                        else {
                            $.each(data.Process.Message, function (key, value) {
                                NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                            });
                        }
                    },
                    complete: function () {
                        $(ele).prop('disabled', false);
                    }
                });

               }
                else {
                   $(ele).prop('disabled', false);
                   NotificationMessage({ 'type': 'error', 'heading': 'Warning', 'message': 'Service date should be greater than or equal to booking date' });
                }
            }
            else {
                $(ele).prop('disabled', false);
                NotificationMessage({ 'type': 'error', 'heading': 'Warning', 'message': 'Booking date should be less than or equal to Todays date' });

            }

        }

    }

    function ResetButton() {
        fn_Servicebooking_initialLoad();
    }


</script>