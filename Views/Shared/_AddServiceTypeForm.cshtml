 // Function to Add EquipmentServiceType
    function UpdateServiceType(ele, actiontype) {
        let $thisForm = $(ele).closest('[perfect-class="form"]');
       
        let pdata = $thisForm.data('pData');
	  if ($thisForm.valid())
      {


          var inputData = {
              __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
              ID_EquipmentServiceType: $thisForm.find('[name="ID_EquipmentServiceType"]').val(),
              EqServiceName: $thisForm.find('[name="EqServiceName"]').val().trim(),
              EqServiceShortName: $thisForm.find('[name="EqServiceShortName"]').val().trim(),
              EqServiceDescription: $thisForm.find('[name="EqServiceDescription"]').val().trim(),
              SortOrder: $thisForm.find('[name="SortOrder"]').val().trim(),
              Mode: $thisForm.find('[name="Mode"]').val()

          }; debugger

         let _ActionUrl = "";
         if (actiontype == "Add") { _ActionUrl = "@Url.Action("AddEquipmentServiceType", "EquipmentServiceType")"; } else { _ActionUrl = "@Url.Action("UpdateEquipmentServiceType", "EquipmentServiceType")"; }
         $.ajax({
             url: (actiontype == "Add") ? "@Url.Action("AddEquipmentServiceType", "EquipmentServiceType")" : "@Url.Action("UpdateEquipmentServiceType", "EquipmentServiceType")",
             type: "POST",
             data: inputData,
             dataType: "json",
             contentType: 'application/x-www-form-urlencoded; charset=utf-8',
             success: function (data) {
                 debugger

                 if (data.Process.IsProcess) {
                     $.each(data.Process.Message, function (key, value) {
                         NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });

                     }); ServicetypeInitialLoad();
                 }
                 else {

                     $.each(data.Process.Message, function (key, value) {
                         NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                     });
                 }

                 $thisForm.find('[perfect-ctype="input"]').val('');
                 $thisForm.find('[perfect-ctype="digit"]').val('');
                 let onSuccess = $thisForm.attr('perfect-onFormSuccess');

                 if (onSuccess) {
                     window[onSuccess];
                 }
                 console.log('> Update  success data', data);
             },

             complete: function () {
                 $(ele).prop('disabled', false);
             }
         });

	  }
    }

    function ResetButton() {
        ServicetypeInitialLoad();
    }


</script>