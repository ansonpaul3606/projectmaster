    // Function to Add SupplierType
    function fn_SupplierTypeForm_add(ele) {
        let $thisForm = $(ele).closest('[perfect-class="form"]');

        if ($thisForm.valid()) {

            $(ele).prop('disabled', true);

            var InputData = {
                __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
                STName: $thisForm.find('[name=STName]').val().trim(),
                STShortName: $thisForm.find('[name=STShortName]').val().trim(),
                SortOrder: $thisForm.find('[name=SortOrder]').val().trim(),
                SupplierMode: $('select[name="menulist"] option:selected').val()
        
            }

            $.ajax({
                url: "@Url.Action("AddNewSupplierType", "SupplierType")",
                type: "POST",
                data: InputData,
                dataType: "json",
                contentType: "application/x-www-form-urlencoded; charset=utf-8",
                success: function (data) {

                    if (data.Process.IsProcess) {

                        $.each(data.Process.Message, function (key, value) {

                            NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                        });

                        $thisForm.find('[perfect-ctype="input"]').val('');
                        let onSuccess = $thisForm.attr('perfect-onFormSuccess')

                        if (onSuccess) {
                            window[onSuccess]($thisForm);


                        }

                    }
                    else {
                        $.each(data.Process.Message, function (key, value) {
                            //toastr.warning(value, "Error");
                            NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                        });
                    }
                },
                complete: function () {
                    $(ele).prop('disabled', false);
                }


            });

        }
    }


    function ResetButton(ele) {
        $('.dataTable tr').removeClass("SelectForDelete");
        loadSupplierTypeAddForm() ;
    }


    // Function to Update SupplierType//
    function fn_SupplierTypeFormUpdate(ele) {

        let $thisForm = $(ele).closest('[perfect-class="form"]');
       
         
        if ($thisForm.valid()) {
            $(ele).prop('disabled', true);

            let pdata = $thisForm.data('pData');
            console.log('in update form button click', pdata);

            var inputDatas = {
                ID_SupplierType: pdata.ID_SupplierType,
                STName: $thisForm.find('[name=STName]').val().trim(),
                STShortName: $thisForm.find('[name=STShortName]').val().trim(),
                SortOrder: $thisForm.find('[name=SortOrder]').val().trim(),
                SupplierMode: $('select[name="menulist"] option:selected').val()
            };


            $.ajax({
                url: "@Url.Action("UpdateSupplierType", "SupplierType")",
                type: "POST",
                data: JSON.stringify(inputDatas),
                dataType: "json",
                contentType: "application/json",
                success: function (data) {

                    if (data.Process.IsProcess) {

                        $.each(data.Process.Message, function (key, value) {
                            NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                           
                        }); SuppliertypeInitialLoad();
                    }
                    else {
                        $.each(data.Process.Message, function (key, value) {
                            NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                        });
                    }
                    $thisForm.find('[perfect-ctype="input"]').val('');
                    $thisForm.find('[perfect-ctype="digit"]').val('');
                    let onSuccess = $thisForm.attr('perfect-onFormSuccess');

                    if (onSuccess) {
                        window[onSuccess];
                    }
                    console.log('> Update AMC success data', data);
                  
                },
                complete: function () {
                    $(ele).prop('disabled', false);
                   
                }

            });


        }
    }

</script>

