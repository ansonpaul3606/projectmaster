    function fn_AreaForm_update(ele) {
        let $thisForm = $(ele).closest('[perfect-class="form"]');

        if ($thisForm.valid()) {
           
            $(ele).prop('disabled', true);
          //  console.log('form data', $thisForm.data('pData'))
            let savedData = $thisForm.data('pData');
            console.log('form data45', $thisForm.data('pData'))
            let inputData = {
                'ID_Area': savedData.ID_Area,
                
                'AreaName': $thisForm.find('[name="AreaName"]').val(),
                'AreaShortName': $thisForm.find('[name="AreaShortName"]').val(),
                'DistrictID': $thisForm.find('[name="DistrictID"]').val(),
                'TypeID': $thisForm.find('[name=TypeID]').val(),
               'TransMode': localStorage.getItem("FRM_TRANSMODE"),
                'SortOrder': $thisForm.find('[name="SortOrder"]').val(),
                
            };
            $.ajax({
                 url: "@Url.Action("UpdateArea", "Area")",
                type: "POST",
                 data: JSON.stringify(inputData),
                dataType: "json",
                contentType: "application/json",
                 success: function (ajaxOutput) {

                     if (ajaxOutput.Process.IsProcess) {

                         $.each(ajaxOutput.Process.Message, function (key, value) {
                             NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                         });

                         let onSuccess = $thisForm.attr('perfect-onFormSuccess')

                         if (onSuccess) {
                             window[onSuccess]();
                         }

                     }
                     else {
                         $.each(ajaxOutput.Process.Message, function (key, value) {
                             NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                         });
                     }
                },
                complete: function () {
                    $(ele).prop('disabled', false);
                }

            });


        }

    }
    function generateAreaShortName(ele) {
        let $form = $(ele).closest('[perfect-class="form"]');
        var fullName = $form.find('[name="AreaName"]').val();
        var shortName = generateShortNameFromFullName(fullName);
        $form.find('[name="AreaShortName"]').val(shortName);
    }
</script>



