            }
            else if (AmountCriteria == 6 && AmountFrom !== "" && (AmountTo === "" && AmountTo !== 0)) {
                $thisForm.find('[name="AmountFrom"]').closest('[perfect-class="formGroup"]').find('.temptableError').text('Enter Amount To');
