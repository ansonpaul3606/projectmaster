            else if (AmountCriteria == 6 && (AmountFrom > AmountTo) && (AmountFrom !== "" && AmountTo!=="")) {
                $thisForm.find('[name="AmountFrom"]').closest('[perfect-class="formGroup"]').find('.temptableError').text('Amount From Should be less than Amount To');
