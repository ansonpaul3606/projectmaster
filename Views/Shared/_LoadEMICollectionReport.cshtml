        if (AmountCriteria != 0) {
            if (AmountCriteria == 6 && (AmountFrom === "" || AmountFrom < 0) && (AmountTo === "" || AmountTo < 0)) {
                $thisForm.find('[name="AmountFrom"]').closest('[perfect-class="formGroup"]').find('.temptableError').text('Enter Amount From and Amount To');
