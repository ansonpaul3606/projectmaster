            }
            else if (AmountCriteria == 6 && (AmountFrom == AmountTo) && (AmountFrom!==""&& AmountTo!=="")) {
                $thisForm.find('[name="AmountFrom"]').closest('[perfect-class="formGroup"]').find('.temptableError').text('');
