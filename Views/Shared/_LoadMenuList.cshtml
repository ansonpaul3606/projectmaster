    </div>
    <div class="card-body">
        <form id="" class="form-valide" perfect-class="form" action="#" method="post" perfect-onFormSuccess="">
            <div class="">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Menu Name</span>
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input type="hidden" name="ID_MenuList" />
                                <input type="text" class="form-control perfectValidate_specialChar" name="MenuName" perfect-class="formGroupControl" perfect-ctype="input" perfect-css="input" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Menu Group</span>
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <select class="form-control perfectValidate_string" id="MenuGroup" name="MenuGroup" perfect-class="formGroupControl" perfect-ctype="select" perfect-css="select" onchange="fn_fillParentMenu(this)" data-live-search="true">
                                        <option value="">Please Select </option>
                                        @if (!(Model.MenuGroups is null))
                                        {
                                            foreach (var menuGroup in Model.MenuGroups)
                                            {
                                                <option value="@menuGroup.ID_MenuGroup">@menuGroup.MnuGrpName</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Controller Name</span>
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <select class="form-control perfectValidate_string" id="MenuListControllerName" name="MenuListControllerName" perfect-class="formGroupControl" perfect-ctype="select" perfect-css="select" onchange="fn_fillAction(this)" data-live-search="true">
                                        <option value="">Please Select </option>
                                        @if (!(Model.ControllerListData is null))
                                        {
                                            foreach (var controller in Model.ControllerListData)
                                            {
                                                <option value="@controller.Name">@controller.Name</option>
                                            }
                                        }
                                    </select>
                                    <div class="text-danger temptableError"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Action Name</span>
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <select class="form-control perfectValidate_string" name="MenuListActionName" perfect-class="formGroupControl" perfect-ctype="select" perfect-css="select" data-live-search="true">
                                        <option value="">Please Select </option>

                                    </select>

                                    <div class="text-danger temptableError"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Parameter(s)</span>
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="Parameter" perfect-class="formGroupControl" perfect-ctype="input" perfect-css="input" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Transaction Mode</span>

                            </label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <select class="form-control" name="TransMode" perfect-class="formGroupControl" perfect-ctype="select" perfect-css="select" data-live-search="true">
                                        <option value="">Please Select </option>
                                        @if (!(Model.TransMode is null))
                                        {
                                            foreach (var Trans in Model.TransMode)
                                            {
                                                <option value="@Trans.ID_Mode">@Trans.ModeName</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Menu Icon</span>
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="MenuImage" perfect-class="formGroupControl" perfect-ctype="input" perfect-css="input" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Parent Menu</span>
                            </label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <select class="form-control" name="ParentMenu" perfect-class="formGroupControl" perfect-ctype="select" perfect-css="select">
                                        <option value="">Please Select </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Sort Order</span>
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-4">
                                <input type="number" class="form-control perfectValidate_numeric" name="SortNo" perfect-class="formGroupControl" perfect-ctype="select" perfect-css="input" value="@Model.Sort" />
                            </div>
                            <div class="col-sm-4">
                                <input type="checkbox" class="form-control-check-input" name="MnuLstVisible" value="MnuLstVisible" perfect-class="formCheckInput" perfect-ctype="checkbox" perfect-css="checkbox" style="margin-top: 11px;"><span>&nbsp;&nbsp; Active</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group row" perfect-class="formGroup" style="display:none">
                            <label class="col-sm-4 col-form-label">
                                <span perfect-class="formGroupLabel">Menu Icon</span>
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="MenuIcon" perfect-class="formGroupControl" perfect-ctype="input" perfect-css="input" />
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer text-right" perfect-class="formFooter">
                    @if (ViewBag.PagedAccessRights.UsrrlMsEdt)
                    {
                        <button id="" type="button" class="btn btn-primary mr-3 addcompany-jq-addnewuserUpdate d-none" name="update" perfect-css="button" onclick="updateMenuList(this,'update')"><i class="fa fa-refresh fa-spin  loaderClass"></i>Update</button>
                    }
                    @if (ViewBag.PagedAccessRights.UsrrlMsAdd)
                    {
                        <button id="addcompany-jq-addnewuser" type="button" class="btn btn-primary mr-3 " name="add" perfect-css="button" onclick="updateMenuList(this,'new')"><i class="fa fa-refresh fa-spin loaderClass "></i>Save</button>
                    }
                  
                    <button type="button" class="btn btn-light" perfect-css="button" onclick="ResetButton(this)" name="reset">Clear</button>
                </div>
        </form>
    </div>
</div>
<script>
    (function () {
        jQuery('select').selectpicker();
    })();
   
    function fn_fillAction(ele) {
        let $thisForm = $(ele).closest('[perfect-class="form"]');
        let $actionDropdown = $thisForm.find('[name="MenuListActionName"]');
        $actionDropdown.empty();
        $actionDropdown.append($('<option/>', { value: '' }).text('Please select')).selectpicker('refresh');
        let inputData =
        {
            __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
            'ControllerName': $thisForm.find('[name=MenuListControllerName]').val()
        };

        $.ajax({
            url: "@Url.Action("FillAction", "Menu")",
            type: "POST",
            dataType: "json",
            data: inputData,
            contentType: 'application/x-www-form-urlencoded; charset=utf-8',
            success: function (ajaxOutput) {
                if (ajaxOutput.length > 0) {
                    $.each(ajaxOutput, function (key, value) {
                        $actionDropdown.append($('<option/>', { value: value.Name }).text(value.Name)).selectpicker('refresh');
                    });
                    if ($actionDropdown.attr('perfect-onloadSelect')) {
                        $actionDropdown.val($actionDropdown.attr('perfect-onloadSelect')).selectpicker('refresh')
                    }
                }
                else {
                    $.each(ajaxOutput.Process.Message, function (key, value) {
                        NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                    });
                }
            }
        });
    }

    function fn_fillParentMenu(ele) {
        let $thisForm = $(ele).closest('[perfect-class="form"]');
        let $actionDropdown = $thisForm.find('[name="ParentMenu"]');
        $actionDropdown.empty();
        $actionDropdown.append($('<option/>', { value: '' }).text('Please select')).selectpicker('refresh');
        let inputData =
        {
            __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
            'FK_MenuGroup': $thisForm.find('[name=MenuGroup]').val()
        };

        $.ajax({
            url: "@Url.Action("FillParentMenu", "Menu")",
            type: "POST",
            dataType: "json",
            data: inputData,
            contentType: 'application/x-www-form-urlencoded; charset=utf-8',
            success: function (ajaxOutput) {
                if (ajaxOutput.length > 0) {
                    $.each(ajaxOutput, function (key, value) {
                        $actionDropdown.append($('<option/>', { value: value.ID_MenuList }).text(value.MnuLstName)).selectpicker('refresh');
                    });
                    if ($actionDropdown.attr('perfect-onloadSelect')) {
                        $actionDropdown.val($actionDropdown.attr('perfect-onloadSelect')).selectpicker('refresh')
                    }
                }
                else {
                    $.each(ajaxOutput.Process.Message, function (key, value) {
                        NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                    });
                }
            }
        });
    }

    function ResetButton(ele) {
        let $thisForm = $(ele).closest('[perfect-class="form"]');
        $thisForm.find('[name=MenuGoupName]').val(""),
            $thisForm.find('[name=ModuleName]').val(""),
            $thisForm.find('[name=MnuGrpVisible]').prop('checked', false),
            $thisForm.find('[name=SortNo]').val("")
        menuListInitialLoad();
    }


     function updateMenuList(ele,actionType) {
         let $thisForm = $(ele).closest('[perfect-class="form"]');
         $(ele).prop('disabled', true);      
         if ($thisForm.valid()) {
             let _ID_MenuList = 0;
             let _ActionUrl = "";

             if (actionType === "new") {
                 _ID_MenuList = 0;
                 _ActionUrl = "@Url.Action("AddNewMenuList", "Menu")";
             }
             else if (actionType === "update") {
                 _ID_MenuList = $thisForm.find('[name="ID_MenuList"]').val();
                 _ActionUrl = "@Url.Action("UpdateMenuList", "Menu")";
             }

             let inputData =
             {
                 __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(),
                 'ID_MenuList': _ID_MenuList,
                 'MnuLstName': $thisForm.find('[name=MenuName]').val(),
                 'FK_MenuGroup': $thisForm.find('[name=MenuGroup]').val(),
                 'ControllerName': $thisForm.find('[name=MenuListControllerName]').val(),
                 'Url': $thisForm.find('[name=MenuListActionName]').val(),
                 'MnuParameter': $thisForm.find('[name=Parameter]').val(),
                 'TransMode': $thisForm.find('[name=TransMode]').val(),
                 'MnuIcon': $thisForm.find('[name=MenuIcon]').val(),
                 'MnuImage': $thisForm.find('[name=MenuImage]').val(),
                 'FK_SubMenu': $thisForm.find('[name=ParentMenu]').val(),
                 'MnuLstVisible': $thisForm.find('[name=MnuLstVisible]').is(":checked"),
                 'SortOrder': $thisForm.find('[name=SortNo]').val()
             };
             $.ajax({
                 url: _ActionUrl,
                 type: "POST",
                 data: inputData,
                 dataType: "json",
                 contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                 success: function (ajaxOutput) {
                     if (ajaxOutput.Process.IsProcess) {
                         $.each(ajaxOutput.Process.Message, function (key, value) {
                             NotificationMessage({ 'type': 'success', 'heading': 'Success', 'message': value });
                         });
                         let onSuccess = $thisForm.attr('perfect-onFormSuccess')
                         if (onSuccess) {
                             window[onSuccess]();
                         }
                         loadMenuList(this);
                         menuListInitialLoad();
                     }
                     else {
                         $.each(ajaxOutput.Process.Message, function (key, value) {
                             NotificationMessage({ 'type': 'error', 'heading': 'Error', 'message': value });
                             $(ele).prop('disabled', false);
                         });
                     }
                 },
                 complete: function () {
                     $(ele).prop('disabled', false);
                 }
             });
         }
         else {           
             $(ele).prop('disabled', false);
         }
        }

</script>