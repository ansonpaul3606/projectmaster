
@model  PerfectWebERP.Models.SubsciptionModel.SubscriptionView
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfect Software Solution</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Assets/css/custom.min.css")" />
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .success-screen {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .loader-bg {
            background-color: rgb(255, 255, 255);
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .loader-persuite {
            width: 50px;
            aspect-ratio: 1;
            display: grid;
            border: 4px solid #0000;
            border-radius: 50%;
            border-right-color: #25b09b;
            animation: l15 1s infinite linear;
        }

            .loader-persuite::before,
            .loader-persuite::after {
                content: "";
                grid-area: 1/1;
                margin: 2px;
                border: inherit;
                border-radius: 50%;
                animation: l15 2s infinite;
            }

            .loader-persuite::after {
                margin: 8px;
                animation-duration: 3s;
            }

        @@keyframes l15 {
            100% {
                transform: rotate(1turn)
            }
        }

        .checkmark {
            width: 56px;
            height: 56px;
            display: block;
            margin: 0 auto 20px;
        }

        .checkmark__circle {
            stroke-width: 2;
            stroke: #38abaf;
            stroke-miterlimit: 10;
            fill: none;
            animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
        }

        .checkmark__check {
            transform-origin: 50% 50%;
            stroke-dasharray: 48;
            stroke-dashoffset: 48;
            stroke-width: 2;
            stroke: #38abaf;
            fill: none;
            animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards, scale 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards;
        }

        @@keyframes stroke {
            100% {
                stroke-dashoffset: 0;
            }
        }

        @@keyframes scale {

            0%,
            100% {
                transform: none;
            }

            50% {
                transform: scale3d(1.1, 1.1, 1);
            }
        }

        .verification-success {
            text-align: center;
            padding: 20px;
        }

        .checkmark__xcircle {
            stroke-width: 5;
            stroke: #FF6347;
            /* Tomato red color for failure */
            stroke-miterlimit: 10;
            fill: none;
            animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
        }

        .checkmark__x {
            transform-origin: 50% 50%;
            stroke-dasharray: 48;
            stroke-dashoffset: 48;
            stroke-width: 5;
            stroke: #FF6347;
            /* Tomato red color for failure */
            fill: none;
            animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards, scale 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards;
        }

        .success-message {
            flex-direction: column;
            justify-content: center;
            align-items: center;
            display: none;
        }

        .success-msg {
            font-size: 24px;
            font-weight: 500;
            text-align: center;
            margin-top: 20px;
            color: #38abaf;
        }
    </style>
</head>

<body>
    <div class="success-screen">
        <div class="loader-bg" id="loaderPesuite">
            <div class="loader-persuite"></div>
        </div>
        <div class="success-message" id="success-msgg">
            <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" />
                <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
            </svg>
            <p class="success-msg">Verified Successfully</p>
        </div>
    </div>
    <script>
        const loaderPersuite = document.getElementById('loaderPesuite');
        const successs = document.getElementById('success-msgg')

        function loaderPursuites() {
            setTimeout(() => {
                loaderPersuite.style.display = 'none'
                successs.style.display = 'flex'
                setTimeout(function () {
                    window.location.href = '@Url.Action("Login", "Security")';
                }, 3000);
            }, 3000)
        }
        loaderPursuites()
    </script>
</body>

</html>