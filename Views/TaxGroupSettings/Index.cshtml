                    {
                     <text>{ displayName: "Delete", action: deleteTaxGroupSettings },</text>
                    }
                ],
                class: "btn btn-success light sharp"
        },
        onlyShowColumn: ["SlNo", "TransDate", "EffectDate"],
        hideColumn: [],
        serialNo: false,
        rowClickAction: editTaxGroupSettings,
