
@{
    ViewBag.Title = "";
 
}

<div class="container-fluid">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12" id="userpasswordreset-form">

        </div>
    </div>
</div>
@section scripts{

    <script type="text/javascript">

        const $formContainer = $('#userpasswordreset-form');

        $(document).ready(function () {
            UserpasswordresetInitialLoad();
            $('#jq-sidemenu').hide();

        });
         function UserpasswordresetInitialLoad() {
          // loadUsersList();
             loadUserpasswordresetAddForm();
        }

        var validationMessage = {
            
            'UserID': {
                'required': 'Please Select a User',
                'digits': 'Invalid User  selected'
            },
        };
           // Fucntion to load Branch ADD form
        function loadUserpasswordresetAddForm() {

            $formContainer.load('@Url.Action("LoadFormUsersPasswordReset", "UserPasswordreset")', function () {

                let $thisForm = $(this).find('[perfect-class="form"]');

                // ... Custom validation message
               $thisForm.validate({ messages: validationMessage });
                // ... Custom validation message

                $thisForm.attr('perfect-onFormSuccess', 'UserpasswordresetInitialLoad');
            });

        };

    </script>
    }


